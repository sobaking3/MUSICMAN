<Page x:Class="MUSICMAN.PageFolder.ManagerPageFolder.ListCompositors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MUSICMAN.PageFolder.ManagerPageFolder"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Style="{x:Null}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Список фильмов">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120" />
                <RowDefinition />
            </Grid.RowDefinitions>



            <TextBox x:Name="SearchTb"
                     Grid.Column="1"
                     FontSize="13"
                     FontWeight="Medium"
                     FontFamily="Montserrat"
                     Foreground="Black"
                     CaretBrush="LightGray"
                     BorderBrush="DarkGray"
                     BorderThickness="0, 0, 0, 1"
                     Height="28"
                     VerticalAlignment="Top"
                     Margin="0,24,101,0"
                     TextChanged="SearchTb_TextChanged">
                <materialDesign:HintAssist.Hint>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Search" />
                        <TextBlock Text="Поиск" />
                    </StackPanel>
                </materialDesign:HintAssist.Hint>
            </TextBox>
            <Border Grid.Column="1">
                <Button Background="#706F6F"
                        Click="Button_Click"
                        Margin="849,19,10,12"
                        Content="+"
                        Foreground="White"
                        FontSize="20"
                        Padding="0 0 0.5 6"
                        RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1" />
                            <SkewTransform />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </Border>

            <ListBox x:Name="ListCompositorsLB"
                     Foreground="Black"
                     Grid.Column="1"
                     d:ItemsSource="{d:SampleData ItemCount=5}"
                     Height="380"
                     Margin="0,0,10,10"
                     VerticalAlignment="Bottom"
                     Grid.RowSpan="2">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Удалить композитора"
                                  x:Name="DeleteM1"
                                  Click="DeleteM1_Click" />
                    </ContextMenu>
                </ListBox.ContextMenu>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="250" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Border Grid.RowSpan="5"
                                    CornerRadius="10"
                                    BorderThickness="2"
                                    Width="70"
                                    Height="100">

                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill"
                                                ImageSource="{Binding FilmPoster}" />
                                </Border.Background>


                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="1,1">
                                        <GradientStop Color="#462AD8"
                                                      Offset="0" />
                                        <GradientStop Color="#DA34AE"
                                                      Offset="0.75" />
                                        <GradientStop Color="#8A16C1"
                                                      Offset="1" />
                                    </LinearGradientBrush>

                                </Border.BorderBrush>
                            </Border>



                            <TextBlock Grid.Column="2"
                                       Grid.Row="0"
                                       Margin="0 3 0 0">
                            <Run Text="Наименование: "
                                 FontWeight="Bold" />
                            <Run Text="{Binding FilmName}" />
                            </TextBlock>

                            <TextBlock Grid.Row="1"
                                       Margin="0 3 0 0"
                                       Grid.Column="2">
                            <Run Text="Выпущенных песен: "
                                 FontWeight="Bold" />
                            <Run Text="{Binding Genres.NameGenre}" />
                            </TextBlock>

                          
                            <TextBlock Grid.Column="2"
                                       Margin="0 3 0 0"
                                       Grid.Row="2">
                            <Run Text="Рейтинг: "
                                 FontWeight="Bold" />
                            <Run Text="{Binding Rating}" />
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Page>
